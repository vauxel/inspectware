							.sidebar-key Email Address
							.sidebar-value {{ client2.email }}
						.sidebar-pair(v-if="client2.phone")
							.sidebar-key Phone Number
							.sidebar-value {{ client2.phone }}
						.sidebar-pair(v-if="client2FullAddress")
							.sidebar-key Current Address
