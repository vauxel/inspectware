				scheduleInspection: function() {
					let req = new XMLHttpRequest();
					let self = this;

					req.addEventListener("load", function() {
						let data = JSON.parse(this.responseText);

						if (data.status == 200) {
							self.nextSection();
						} else {
							self.$Modal.error({
								title: "Scheduling Error",
								content: `There was an error with the scheduling information:\n\n${data.message}`,
							});
						}
					});

					let services = this.services.slice(0);
					services.push(this.mainService);

					const payload = {
						services: services,
						property: this.property,
						appointment: this.appointment,
						client1: this.client1,
						client2: this.client2,
						realtor: this.realtor
					};

					req.open("POST", `${apiURL}/api/scheduling/schedule?account=${accountId}`);
					req.setRequestHeader("Content-Type", "application/json");
