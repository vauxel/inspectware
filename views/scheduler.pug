										i-input(v-model="client2.email" placeholder="Enter the second client's email address" @keyup.native="validateClient2")
									form-item(label="Phone Number" prop="phone" :required="!lockClient2" :show-message="false")
										i-input(v-model="client2.phone" placeholder="Enter the second client's phone number" v-mask="'(###) ###-####'" :disabled="lockClient2")
									form-item(label="Current Address" prop="address" :required="requireClient2Address" :show-message="false")
										i-input(v-model="client2.address" placeholder="Enter the second client's current address" :disabled="lockClient2")
									form-item(label="Current City" prop="city" :required="requireClient2Address" :show-message="false")
										i-input(v-model="client2.city" placeholder="Enter the second client's current city" :disabled="lockClient2")
									form-item(label="Current State" prop="state" :required="requireClient2Address" :show-message="false")
										i-select(
											v-model="client2.state"
											filterable
											clearable
											placeholder="Select the second client's current state"
											:disabled="lockClient2")
											i-option(v-for="(long, short) in stateList" :value="short") {{ long }}
									form-item(label="Current ZIP Code" prop="zip" :required="requireClient2Address" :show-message="false")
										i-input(v-model="client2.zip" placeholder="Enter the second client's current zip code" v-mask="'#####'" :disabled="lockClient2")
