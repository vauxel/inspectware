			methods: {
				prevSection: function() {
					this.section--;
				},
				nextSection: function() {
					this.section++;
				},
				validateSection: function() {
					let passed = false;

					if (this.section === 1) { // Services
						if (this.mainService == "") {
							this.$Modal.error({
								title: "Minimum Services Requirement",
								content: "You must select a main service to schedule."
