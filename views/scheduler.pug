				getInvoicePricing: function() {
					let req = new XMLHttpRequest();
					let self = this;

					req.addEventListener("load", function() {
						let data = JSON.parse(this.responseText).data;
						self.invoice.items = data.items;
						self.invoice.subtotal = data.subtotal;
						self.invoice.tax = data.tax;
						self.invoice.taxPercent = data.tax_percent;
						self.invoice.total = data.total;
					});

					let services = this.services.slice(0);
					services.push(this.mainService);

					const url = `${apiURL}/api/scheduling/pricing?account=${accountId}&services=${services.join("|")}&sqft=${this.property.sqft}&age=${this.property.age}&foundation=${this.property.foundation}`;

