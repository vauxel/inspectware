					req.addEventListener("load", function() {
						let data = JSON.parse(this.responseText).data;
						self.calTimeSlots = data;
					});

					let startDate = new Date();
					startDate.setDate(startDate.getDate() + 1);
					let startDateString = `${startDate.getFullYear()}${((startDate.getMonth() + 1) + "").padStart(2, "0")}${(startDate.getDate() + "").padStart(2, "0")}`;

					let endDate = new Date(startDate.getFullYear(), startDate.getMonth() + 3, 0);
					let endDateString = `${endDate.getFullYear()}${((endDate.getMonth() + 1) + "").padStart(2, "0")}${(endDate.getDate() + "").padStart(2, "0")}`;

					const url = `${apiURL}/api/scheduling/availabilities?account=${accountId}&from=${startDateString}&until=${endDateString}`;

					req.open("GET", url);
